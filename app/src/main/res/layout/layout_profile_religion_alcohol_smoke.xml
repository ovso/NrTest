<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="io.github.ovso.nrtest.MainViewModel"
        />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/profile_lable_religion"
          android:textColor="@color/warm_grey"
          android:textSize="12sp"
          tools:layout_editor_absoluteY="20dp"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="@{viewModel.religioObField.get()}"
          android:textColor="@color/dark"
          android:textSize="16sp"
          tools:layout_editor_absoluteY="20dp"
          tools:text="미대"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:maxLines="1"
          android:text="@string/profile_lable_alcohol"
          android:textColor="@color/warm_grey"
          android:textSize="12sp"
          tools:layout_editor_absoluteY="20dp"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:maxLines="1"
          android:text="@{viewModel.alcoholObField.get()}"
          android:textColor="@color/dark"
          android:textSize="16sp"
          tools:layout_editor_absoluteY="20dp"
          tools:text="디자이너"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/profile_lable_smoke"
          android:textColor="@color/warm_grey"
          android:textSize="12sp"
          tools:layout_editor_absoluteY="20dp"
          />
      <TextView
          android:id="@+id/textview_profile_desc"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="@{viewModel.smokingObField.get()}"
          android:textColor="@color/dark"
          android:textSize="16sp"
          tools:layout_editor_absoluteY="20dp"
          tools:text="말이 통하고, 진심을 나누는 사람. 쉼이 되고픈 사람."
          />
    </LinearLayout>
  </LinearLayout>
</layout>